@using System.Data; 
@using ForeignKeyTunneling.Utils;

@{
    ViewData["Title"] = "Home";
    List<SelectListItem> tableList = HtmlUtils.GetSelectItemList(ViewData["Tables"] as DataTable, "TABLE_NAME", "TABLE_NAME", ViewBag.TableName);
}

<script type="text/javascript">
    $(function () {			
    });
</script>

<div class="mb-2 row">
    <div class="col-sm-12">
        <div id="SimpleJSTree"></div>
    </div>
</div>
<form id="form" method="post" asp-action="Tree">
    <div class="mb-2 row form-group">
        <label class="col-sm-2 col-form-label">Table</label>
